<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image_available"
                android:background="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp">

                <!--android:textColor="#2d2d2d"-->
                <TextView
                    android:id="@+id/card_primary_info"
                    android:gravity="center"
                    android:textColor="#FFE81F"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary info"
                    android:textSize="22sp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp">

                <!--android:textColor="#2d2d2d"-->
                <TextView
                    android:id="@+id/card_info1_name"
                    android:gravity="center"
                    android:textColor="@android:color/system_notification_accent_color"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info1:"
                    android:textSize="16sp"
                    android:ellipsize="none"
                    android:maxLength="18"
                    android:maxLines="5"
                    android:scrollHorizontally="false"/>

                <!--android:textColor="#2d2d2d"-->
                <TextView
                    android:id="@+id/card_info1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info1 Value"
                    android:textSize="16sp"
                    android:ellipsize="none"
                    android:maxLength="18"
                    android:maxLines="5"
                    android:scrollHorizontally="false"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="7dp">

                <!--android:textColor="#2d2d2d"-->
                <TextView
                    android:id="@+id/card_info2_name"
                    android:gravity="center"
                    android:textColor="@android:color/system_notification_accent_color"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info2:"
                    android:textSize="16sp"
                    android:ellipsize="none"
                    android:maxLength="18"
                    android:maxLines="5"
                    android:scrollHorizontally="false"/>

                <!--android:textColor="#2d2d2d"-->
                <TextView
                    android:id="@+id/card_info2"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Info2 Value"
                    android:textSize="16sp"
                    android:ellipsize="none"
                    android:maxLength="18"
                    android:maxLines="5"
                    android:scrollHorizontally="false"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>